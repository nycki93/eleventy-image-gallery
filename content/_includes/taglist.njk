{% set tags = tags or [] %}
{% set exclude = exclude or r/^_/ %}
<div style="display: flex; flex-wrap: wrap;">
  {% for tag in tags %}
  {% if not exclude.test(tag) %}
  <span style="margin: 1ch; background-color: lightgreen"><a href="/tagged/{{ tag }}/">{{ tag }}</a></span>
  {% endif %}
  {% endfor %}
</div>
