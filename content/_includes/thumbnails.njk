{% set tag = tag or 'all' %}
<div style="display: flex; flex-wrap: wrap;">
  {% for post in collections[tag] %}
  <div style="width: 10ch; height: 10ch; background-color: skyblue; margin: 2ch; display: flex; align-items: center; justify-content: center; text-align: center;">
    {% if post.data.thumbnail %}
    <img src={{ post.data.thumbnail }}>
    {% else %}
    <a href="{{ post.url }}">{{ post.data.title or post.page.fileSlug }}</a>
    {% endif %}
  </div>
  {% endfor %}
</div>