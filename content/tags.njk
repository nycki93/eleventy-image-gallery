---js
import { getCollectionTags } from './eleventy.config.js';
const pagination = {
  data: "collections",
  before: getCollectionTags('$gallery'),
  size: 1,
  alias: "tag",
};
const permalink = "/tagged/{{ tag }}/";
---
<h1>Tagged {{ tag }}</h1>
<ul>
  {% for post in collections[tag] %}
    <li><a href="{{ post.url }}">{{ post.data.title or post.page.fileSlug }}</a></li>
  {% endfor %}
</ul>
